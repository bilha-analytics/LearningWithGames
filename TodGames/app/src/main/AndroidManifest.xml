<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todgames">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PlayGameActivity"
            android:label="@string/title_activity_play_game"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".IntroGameActivity"
            android:label="@string/title_activity_play_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AnimalsGameActivity"
            android:label="@string/title_activity_animals_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LettersGameActivity"
            android:label="@string/title_activity_letters_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NumbersGameActivity"
            android:label="@string/title_activity_numbers_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GamesListActivity"
            android:label="@string/title_activity_games_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>